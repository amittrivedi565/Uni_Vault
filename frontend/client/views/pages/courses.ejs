<main>
  <a href="/" class="back-link">Back To Home</a>

  <section>
    <h2>Choose Your Resources</h2>
    <quote>
      Explore semester-wise subjects for various branches/fields. From first
      year fundamentals to final year.
    </quote>
  </section>

  <h2 class="gradient-line"></h2>

  <section id="semesters-section">
    <% if (Array.isArray(data) && data.length > 0) { %>
      <div class="accordion-container">
        <% data.forEach(semester => { %>
          <div class="accordion-item">
            <div class="accordion-header">
              <h3><%= semester.name %></h3>
            </div>
            <div class="accordion-content" id="content">
              <ul class="accordion-list">
                <% if (Array.isArray(semester.subjects)) { %>
                  <% semester.subjects.forEach(subject => { %>
                    <li>
                      <details>
                        <summary><%= subject.code %> <%= subject.name %></summary>
                        <ul>
                          <% if (Array.isArray(subject.units) && subject.units.length > 0) { %>
                            <% subject.units.forEach(unit => { %>
                              <li>
                                <a href="<%= css_service %>/download/<%= unit.resource_id %>">
                                  <%= unit.shortname %> - <%= unit.name %>
                                </a>
                              </li>
                            <% }) %>
                          <% } else { %>
                            <li>No units available.</li>
                          <% } %>
                        </ul>
                      </details>
                    </li>
                  <% }) %>
                <% } else { %>
                  <li>No subjects available.</li>
                <% } %>
              </ul>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p>No semesters found.</p>
    <% } %>
  </section>

  <section>
    <h2>Need Help?</h2>
    <p>
      Can't find your specific course or semester? <a href="#">Contact us</a>.
      We're always expanding our vault of academic resources.
    </p>
  </section>
</main>
